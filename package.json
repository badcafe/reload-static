{
  "name": "reload-static",
  "version": "1.0.1",
  "description": "simple, compliant file streaming module for node with live reload capabilities",
  "author": "Philippe Poulard <philippe.poulard@inria.fr>",
  "contributors": [
    "Alexis Sellier <alexis@cloudhead.io>",
    "Pablo Cantero <pablo@pablocantero.com>",
    "Ionică Bizău <bizauionica@gmail.com>",
    "Brett Zamir"
  ],
  "type": "module",
  "main": "./dist/reload-static.cjs",
  "types": "./dist/reload-static.d.ts",
  "license": "MIT",
  "bin": {
    "static": "bin/cli.js"
  },
  "keywords": [
    "http",
    "static",
    "file",
    "server"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/badcafe/reload-static"
  },
  "scripts": {
    "build": "rollup -c",
    "start": "./bin/cli.js",
    "lint": "eslint --ext=cjs,js .",
    "mocha": "mocha test/integration --parallel",
    "test": "c8 npm run mocha",
    "test:reload": "NODE_ENV=development node examples/reload-server.js"
  },
  "dependencies": {
    "colors": "1.4.0",
    "command-line-basics": "^1.0.2",
    "event-stream": "^4.0.1",
    "lodash.debounce": "^4.0.8",
    "mime": "^3.0.0",
    "minimatch": "^5.0.1",
    "send": "^0.18.0"
  },
  "c8": {
    "exclude": [
      "dist",
      "test"
    ]
  },
  "devDependencies": {
    "@types/event-stream": "^4.0.0",
    "@types/lodash.debounce": "^4.0.7",
    "@types/mime": "^2.0.3",
    "@types/minimatch": "^3.0.5",
    "@types/node": "^18.0.1",
    "c8": "^7.11.0",
    "chai": "^4.3.6",
    "eslint": "^8.10.0",
    "mocha": "^9.2.1",
    "node-fetch": "^2.6.6",
    "nodemon": "^2.0.18",
    "rollup": "^2.70.0",
    "rollup-plugin-typescript2": "^0.32.1",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "bugs": {
    "url": "https://github.com/badcafe/reload-static/issues"
  },
  "homepage": "https://github.com/badcafe/reload-static",
  "directories": {
    "example": "examples",
    "test": "test"
  }
}
